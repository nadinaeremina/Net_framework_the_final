<Window x:Class="English_for_kids.Rating"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:English_for_kids"
        mc:Ignorable="d"
        Title="Рейтинг" Height="180" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid Margin="0,0,-1,0">
        <DataGrid x:Name="dg_pl" AutoGenerateColumns="False" RowBackground="LightGreen" AlternatingRowBackground="Yellow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Место" Binding="{Binding Path=Number}" Width="50"/>
                <DataGridTextColumn Header="Никнейм" Binding="{Binding Path=Nickname}" Width="100"/>
                <DataGridTextColumn Header="Возраст" Binding="{Binding Path=Age}" Width="60"/>
                <DataGridTextColumn Header="Очки" Binding="{Binding Path=Rating}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
